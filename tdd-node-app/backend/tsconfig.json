{
  "compilerOptions": {
    "target": "es2018",
    "strict": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "esModuleInterop": true,
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}